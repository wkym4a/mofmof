<p id="notice"><%= notice %></p>
<hr>
<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td>
          <% if not(item.rent_price == nil) %>
            <%= item.rent_price.to_s(:delimited) %><div>円</div>
          <% end %>
        </td>
        <td><%= item.address %></td>
        <td>
          <% if not(item.age == nil) %>
            <%= item.age.to_s(:delimited) %><div>年</div>
          <% end %>
        </td>
        <td><%= item.matter %></td>
        <td><%= link_to '詳細', item %></td>
        <td><%= link_to '編集', edit_item_path(item) %></td>
        <td><%= link_to '削除', item, method: :delete,
           data: { confirm: '物件情報を削除します。よろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

